<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="#393A31"
        android:layout_alignParentTop="true">
        <ImageView
            android:id="@+id/layout_main_tubiao"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/zou_cai"
            android:layout_gravity="center"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="首页"
            android:textColor="#fff"
            android:textSize="16sp"
            android:paddingLeft="10dp"
            android:id="@+id/dibu_wenzi"/>
    </LinearLayout>
    <FrameLayout
        android:layout_below="@+id/main_layout"
        android:id="@+id/aishikan_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.view.ViewPager
            android:id="@+id/vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:id="@+id/linehome"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/homeiv"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:src="@mipmap/dubu11"/>
            <TextView
                android:id="@+id/hometv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#9000"
                android:textSize="10sp"
                android:text="首页"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linecourse"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/courseiv"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:src="@mipmap/dubu21"/>
            <TextView
                android:id="@+id/coursetv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#9000"
                android:textSize="10sp"
                android:text="课程"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linedownload"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/downloadiv"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:src="@mipmap/dubu31"/>
            <TextView
                android:id="@+id/downloadtv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="10sp"
                android:textColor="#9000"
                android:text="下载"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
