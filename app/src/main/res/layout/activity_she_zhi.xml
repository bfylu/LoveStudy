<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_she_zhi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#34394B"
    android:paddingLeft="5pt">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@mipmap/fanhuijian"
        android:layout_gravity="center_vertical"
        android:id="@+id/fanhuijian"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:text="设置"
    android:textColor="#fff"
    android:paddingLeft="5pt"
    android:gravity="center_vertical"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingRight="7pt"
        android:id="@+id/qingchuhuangcun">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="清除缓存"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0kb"
            android:textSize="16sp"
            android:id="@+id/huangcun"
            android:gravity="center_vertical" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingRight="7pt"
        android:id="@+id/feiWIFIbof">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="允许非WIFI网络播放视频"
            android:paddingLeft="20dp"
            android:textColor="#000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请慎重选择开启 避免过度使用流量"
                android:textSize="11dp"
                android:paddingTop="5sp"
                android:paddingLeft="20dp"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@mipmap/she_la2"
            android:id="@+id/she_la"
            android:gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingRight="7pt"
        android:id="@+id/feiWIFIxiabof">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="允许非WIFI网络下载视频"
                android:paddingLeft="20dp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请慎重选择开启 避免过度使用流量"
                android:textSize="11dp"
                android:paddingTop="5sp"
                android:paddingLeft="20dp"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@mipmap/she_la2"
            android:id="@+id/she_xia_la"
            android:gravity="center_vertical" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingRight="7pt"
        android:id="@+id/zidongbof">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="自动播放"
                android:paddingLeft="20dp"
                android:textColor="#000"
                android:gravity="center_vertical"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@mipmap/she_la1"

            android:id="@+id/she_zidong_la"
            android:gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingRight="7pt"
        android:id="@+id/lixianxiazai">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="离线下载路径设置"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/youtubiao"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingRight="7pt"
        android:id="@+id/guangyuwmn">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="关于我们"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/youtubiao"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>
